      </button>
      <button type="submit" class="filter" onclick="updateAction('Camping')">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
      </button>
      <button type="submit" class="filter" onclick="updateAction('Farms')">
        <div><i class="fa-solid fa-cow"></i></div>
        <p>Farms</p>
      </button>
      <button type="submit" class="filter" onclick="updateAction('Arctic')">
        <div><i class="fa-regular fa-snowflake"></i></div>
        <p>Arctic</p>
      </button>
      <button type="submit" class="filter" onclick="updateAction('Domes')">
        <div><i class="fa-solid fa-igloo"></i></div>
        <p>Domes</p>
      </button>
    </form>
  
    <div id="tax-toggle" class="filter">
      <div class="form-check-reverse form-switch">
        <input
          class="form-check-input"
          type="checkbox"
          id="flexSwitchCheckDefault"
        />
        <label class="form-check-label" for="flexSwitchCheckDefault"
          >Display total before taxes</label
        >
      </div>
    </div>
  </div>


  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% for(list of allListing){ %>
    <a href="/listings/<%= list._id %>" class="card-a">
      <div class="card listing-card">
        <img
          src="<%= list.image.url %>"
          class="card-img-top"
          alt="listing_image"
        />
        <div class="card-body">
          <p class="card-text">
            <b><%= list.title %></b><br />
            &#x20B9; <%= list.price.toLocaleString("en-IN") %>/night
            <i class="tax-info">&nbsp;&nbsp; +18% GST</i>
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>

